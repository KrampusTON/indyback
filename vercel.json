{
  "version": 2,
  "builds": [
    {
      "src": "backend/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/referrals/(.*)",
      "dest": "/backend/index.ts",
      "methods": ["GET", "POST", "OPTIONS"]
    },
    {
      "src": "/api/sale/(.*)",
      "dest": "/backend/index.ts",
      "methods": ["GET", "POST", "OPTIONS"]
    },
    {
      "src": "/api/tasks/(.*)",
      "dest": "/backend/index.ts",
      "methods": ["GET", "POST", "OPTIONS"]
    },
    {
      "src": "/api/admin/(.*)",
      "dest": "/backend/index.ts",
      "methods": ["GET", "POST", "OPTIONS"]
    },
    {
      "src": "/(.*)",
      "dest": "/backend/index.ts"
    }
  ]
}
